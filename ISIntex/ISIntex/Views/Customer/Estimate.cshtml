@model ISIntex.Models.WorkOrder


@{
    ViewBag.Title = "Estimate";
}

<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="col-12" align="center">
            <h2>Your estimated price</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12" align="center" style="font-size: 4em; margin-bottom: 50px;">
            $@Model.EstimatedPrice
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card h-100">
                <h4 class="card-header">Reject this Estimate</h4>
                <div class="card3">
                    <div class="gloss" style="height: 200px; font-size: 1.5em; padding: 10px; padding-top: 50px" align="center">
                        
                    </div>
                </div>
                <div class="card-footer">
                    <input type="button" class="btn-block btn-outline-info" value="Reject" onclick="location.href='@Url.Action("Reject", "Customer")'" />
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card h-100">
                <h4 class="card-header">Accept estimate</h4>
                <div class="card1">
                    <div class="gloss" style="height: 200px; font-size: 1.5em; padding: 10px; padding-top: 50px" align="center">
                        
                    </div>
                </div>
                <div class="card-footer">
                    <input type="button" class="btn-block btn-outline-info" value="Accept" onclick="location.href='@Url.Action("Accept", "Customer")'" />
                </div>
            </div>
        </div>
    </div>
</div>







