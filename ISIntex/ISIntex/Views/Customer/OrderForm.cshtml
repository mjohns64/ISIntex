@model ISIntex.Models.WorkOrder

@{
    /**/

    ViewBag.Title = "OrderForm";
}
<div class="container" style="margin-top: 25px; margin-bottom: 50px;">
    <h2 style="padding: 20px;">Order/Estimate Form</h2>
    <p>If you need a reference to the periodic table of elements, please see below</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!--Elements Section-->
    <div style="background-color: rgba(1,1,1,.05); border-top-left-radius: 15px; border-top-right-radius: 15px; padding: 15px;">
        <h4 style="padding: 10px;">Select 2 elements</h4>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Element1, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Element1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Element1, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Element2, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Element2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Element2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Element1Qty, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Element1Qty, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Element1Qty, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Element2Qty, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Element2Qty, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Element2Qty, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6"></div>
        </div>
    </div>

        <!--Other Section-->
    <div style="background-color: rgba(1,1,1,.05); border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; padding: 15px; margin-top: 5px;">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.OptionalTests, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.OptionalTests)
                            @Html.ValidationMessageFor(model => model.OptionalTests, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6"></div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AssayID, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.DropDownList("AssayName", new[] {
                            new SelectListItem()
                            {Text = "Biochemical Pharmacology (BP)", Value = "Biochemical Pharmacology (BP)" },
                            new SelectListItem()
                            {Text = "DiscoveryScreen® (DS)", Value= "DiscoveryScreen® (DS)" },
                            new SelectListItem()
                            {Text = "ImmunoScreen® (IS)", Value= "ImmunoScreen® (IS)" },
                            new SelectListItem()
                            {Text = "ProfilingScreen® (PF)", Value="ProfilingScreen® (PF)" },
                            new SelectListItem()
                            {Text = "PharmaScreen® (PS)", Value="PharmaScreen® (PS)" },
                            new SelectListItem()
                            {Text = "CustomScreen™ (CS)", Value="CustomScreen™ (CS)" } },
                            "Choose Assay",
                            new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AssayID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-6"></div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Get Estimate" class="btn btn-outline-info" />
                    </div>
                </div>
            </div>
            <div class="col-6"></div>
        </div>
    </div>
        }
    <div> 
        <img src="~/Content/images/periodic-table.png" alt="Alternate Text" />
    </div>
</div>
    




