
@{
    ViewBag.Title = "Index";
}

<div class="container body-content" style="margin-top: 20px;">
    <h1>Sales Rep Portal</h1>
    <h3>Welcome, @ISIntex.Models.Authorized.FirstName @ISIntex.Models.Authorized.LastName to your Sales Portal</h3>
    <hr />
    <h3>Get started</h3>
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <h4 class="card-header">See My Clients</h4>
                <div class="cardCatalog">
                    <div class="gloss" style="height: 200px; font-size: 1.5em; padding: 10px; padding-top: 70px" align="center">
                        <p>View a list of all of your clients</p>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="Sales/MyClients" class="btn btn-outline-info btn-block">View My Clients</a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <h4 class="card-header">See Rejected Estimates</h4>
                <div class="cardCatalog">
                    <div class="gloss" style="height: 200px; font-size: 1.5em; padding: 10px; padding-top: 70px;" align="center">
                        <p>See a list of clients that have rejected online estimates</p>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="Sales/RejectedEstimate" class="btn btn-outline-info btn-block">View Rejected Estimates</a>
                </div>
            </div>
        </div>
    </div>
</div>